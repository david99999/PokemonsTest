<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPokemonPic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            tools:src="@mipmap/ic_launcher" />

        <ProgressBar
            android:id="@+id/pbLoadingPic"
            style="?android:attr/indeterminateProgressStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvPokemonDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/placeholder_name" />

    <TextView
        android:id="@+id/tvPokemonNationalId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/placeholder_number" />

    <TextView
        android:id="@+id/tvPokemonMFRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/placeholder_number" />
</LinearLayout>
